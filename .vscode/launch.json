{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Serve",
      "cargo": {
        "args": [
          "build",
          "--bin=rustify",
          "--package=rustify"
        ],
        "filter": {
          "name": "rustify",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "serverReadyAction": {
        "action": "openExternally",
        "killOnServerStop": false,
        "pattern": "Rocket has launched from (https?://[^\\s]+)",
        "uriFormat": "%s"
      }
    }
  ]
}
